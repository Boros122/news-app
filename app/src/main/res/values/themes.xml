<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewsApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#F5F5F5</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/merriweather_regular</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="BaseButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
    </style>

    <style name="ShapeAppearanceOverlay.CutBottomRight">
        <item name="cornerSize">0%</item>
        <item name="cornerSizeBottomRight">25%</item>
        <item name="cornerFamilyBottomRight">cut</item>
    </style>

    <style name="TitleTextStyle">
        <item name="android:fontFamily">@font/merriweather_bold</item>
        <item name="android:textColor">@color/dark</item>
    </style>

    <style name="TimeTextStyle">
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:background">@color/white</item>
        <item name="titleTextColor">@color/dark</item>
        <item name="titleCentered">true</item>
        <item name="navigationIcon">@drawable/ic_menu</item>
        <item name="colorControlNormal">@color/dark</item>
        <item name="android:fontFamily">@font/merriweather_black</item>
    </style>

</resources>